<div class="bg-gray-300 px-5 object-center">
<h1 class="text-3xl text-gray-600 font-bold md:text-center mt-5">Welcome Back Duggan! </h1>
</div>
<div class="container  h-full flex justify-center items-center bg-gray-100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'w-full max-w-sm max-w-lg center object-center px-5 mt-5 mb-5'}) do |f| %>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :email, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.email_field :email,class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :password, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
   <div class="md:w-2/3">
        <%= f.password_field :password,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autocomplete: "current-password" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3"></div>
      <label class="md:w-2/3 block text-gray-500 font-bold">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      </label>
    </div>
  <% end %>

  <div  class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3"><%= f.submit "Log in", class: "shadow bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"  %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
</div>
</div>
